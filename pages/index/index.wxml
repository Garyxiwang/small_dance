<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <button class="btn_begin" plain="true" type="primary" bindtap="gameStart">开始</button>
  <button class="btn_begin" plain="true" type="primary" bindtap="gameTestStart">练习模式</button>
  <view class="explian" style="flex-direction:column;">
    <view class="explian-text_note">按键：w:'↑'，s:'↓'，a:'←'，d:'→'</view>
  </view>
</view>